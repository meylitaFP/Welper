<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/myrect_rectangle"
    android:layout_marginTop="5dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_thin"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:layout_weight="2"
            android:id="@+id/image_product_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ninety" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/name_product_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000" />


            <TextView
                android:id="@+id/date_product_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Date"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>