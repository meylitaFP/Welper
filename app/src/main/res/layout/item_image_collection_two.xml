<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/myrect_rectangle"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_thin">

        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/display_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/one_hundred_twenty" />

        <TextView
            android:id="@+id/display_image_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_image"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Type 120"
            android:textSize="10dp"/>
    </RelativeLayout>
</RelativeLayout>